# Authentication Configuration
AUTH_TOKEN=insecure-token-change-me
ADMIN_SECRET=change-me-admin-secret

# Admin User Configuration (for automatic admin user creation)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me-secure-admin-password

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=change-me-jwt-secret-key-256-bit-minimum
JWT_REFRESH_SECRET=change-me-jwt-refresh-secret-256-bit-minimum
JWT_ACCESS_EXPIRY=15
JWT_REFRESH_EXPIRY=7

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/livestore

# Optional: Custom ports for development
CLIENT_PORT=5173
ADMIN_PORT=5174
API_PORT=8000
POSTGRES_PORT=5432